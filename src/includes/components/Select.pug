mixin Select({ className = '', size = 'middle', placeholder = '', options = [] })
  .Select(class=`${className} ${size}`)
    select.Select-control
      if (placeholder)
        option(value="")= placeholder

      each item in options
        option(value=`${item.value}`)= item.label

    .Select-arrow 
      <svg width="14" height="9" viewBox="0 0 14 9" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12.9248 1L6.89488 7L0.864954 0.999999" stroke="black" stroke-width="1.5" stroke-linecap="round"/></svg>

