    { link: 'chi-tiet-san-pham.html', title: 'Chi tiết' },
  ] })

  .ProductDetailPage 
    .container 
      .ProductDetailPage-wrapper 
        .Card.ProductDetailPage-detail 
          .Card-body
            .ProductDetailPage-detail-wrapper.flex.flex-wrap
              .ProductDetailPage-detail-image 
                img(src="./assets/images/image-product.png", alt="")

                video(defaultMuted autoplay loop muted playsinline preload="metadata" controls).ProductDetailPage-detail-video
                  source(src="./assets/videos/video-product-1.mp4" type="video/mp4")

                .ProductDetailPage-detail-image-play.active
                  img(src="./assets/icons/icon-play.svg", alt="")

              .ProductDetailPage-detail-info.flex.flex-col.justify-between
