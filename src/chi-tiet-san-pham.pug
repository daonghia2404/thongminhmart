                    .ProductDetailPage-detail-info-basic-price.flex.items-center
                      span 120,000 đ
                      del 190,000 đ

                  .ProductDetailPage-detail-info-basic-item   
                    .ProductDetailPage-detail-info-text MSP: 123456

                .ProductDetailPage-detail-info-options.flex.flex-wrap
                  .ProductDetailPage-detail-info-options-item.flex.flex-col.justify-between
                    .ProductDetailPage-detail-info-options-item-title

                    .ProductDetailPage-detail-info-options-item-row.flex.items-center 
                      .ProductDetailPage-detail-info-options-item-row-label Màu sắc
                      .ProductDetailPage-detail-info-options-item-row-control
                        +Select({
                          options: [
                            { label: 'Trắng', value: 'white' },
                            { label: 'Đỏ', value: 'red' },
                            { label: 'Xanh', value: 'blue' },
                          ],
                        })

                    .ProductDetailPage-detail-info-options-item-row.flex.items-center 
                      .ProductDetailPage-detail-info-options-item-row-label Kích cỡ
                      .ProductDetailPage-detail-info-options-item-row-control
                        +Select({
                          options: [
                            { label: 'Nhỏ', value: 'small' },
                            { label: 'Vừa', value: 'medium' },
                            { label: 'To', value: 'large' },
                          ],
                        })

                    .ProductDetailPage-detail-info-options-item-row.flex.items-center 
                      .ProductDetailPage-detail-info-options-item-row-label Số lượng
                      .ProductDetailPage-detail-info-options-item-row-control
                        +Amount({})

                  .ProductDetailPage-detail-info-options-item
                    .ProductDetailPage-detail-info-options-item-title Thêm vào giỏ hàng
                    .ProductDetailPage-detail-info-options-item-carts
                      each item in [1,2,3,4,5,6,7,8]
                        .ProductDetailPage-detail-info-options-item-carts-item.flex.items-center
                          .ProductDetailPage-detail-info-options-item-carts-item-title 1 sản phẩm - Màu sắc: Trắng - Kích cỡ: 5x7x3
                          .ProductDetailPage-detail-info-options-item-carts-item-remove 
                            img(src="./assets/icons/icon-x-yellow.svg", alt="")

                .ProductDetailPage-detail-info-actions.flex.flex-wrap
                  .ProductDetailPage-detail-info-actions-item
                    +Button({ title: 'Thêm vào giỏ hàng', icon: 'cart', className: 'outline-gray' })
                  .ProductDetailPage-detail-info-actions-item
                    +Button({ title: 'Mua ngay', className: 'primary' })

