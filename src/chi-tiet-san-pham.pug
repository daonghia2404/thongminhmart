extends includes/layouts/Guest.pug

block pages
  include includes/containers/ProductActions.pug
  include includes/containers/ProductCartDrawer.pug

  +Navigation({})

  +Breadcrumb({ data: [
    { link: 'index.html', title: 'Trang chủ' },
